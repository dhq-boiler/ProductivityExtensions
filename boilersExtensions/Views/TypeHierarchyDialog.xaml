<Window
    x:Class="boilersExtensions.Views.TypeHierarchyDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:boilersExtensions.Controls"
    xmlns:converters="clr-namespace:boilersExtensions.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="型階層選択"
    Width="640"
    Height="480"
    Background="#1F1F1F"
    Closing="TypeHierarchyDialog_OnClosing"
    ResizeMode="CanResize"
    Topmost="True"
    mc:Ignorable="d">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <converters:InverseBooleanConverter x:Key="InverseBooleanConverter" />
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5" />
            <Setter Property="Padding" Value="8,2" />
            <Setter Property="MinWidth" Value="80" />
            <Setter Property="Height" Value="25" />
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Margin" Value="2" />
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Margin" Value="5" />
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#333333" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderBrush" Value="#555555" />
            <Setter Property="Padding" Value="2" />
            <Setter Property="Margin" Value="2" />
        </Style>
        <Style TargetType="ListBox">
            <Setter Property="Background" Value="#2D2D2D" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderBrush" Value="#555555" />
            <Setter Property="Padding" Value="2" />
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto" />
        </Style>
        <Style TargetType="GroupBox">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderBrush" Value="#555555" />
            <Setter Property="Margin" Value="5" />
        </Style>
        <Style TargetType="ListBoxItem">
            <Setter Property="Padding" Value="5" />
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#0A78D7" />
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#454A57" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  ローディングオーバーレイ  -->
        <Grid
            Grid.RowSpan="4"
            Panel.ZIndex="1000"
            Background="#80000000"
            Visibility="{Binding IsProcessing.Value, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel
                MinWidth="300"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
                <controls:LoadingSpinner
                    Width="50"
                    Height="20"
                    Margin="0,0,0,10" />
                <TextBlock
                    Margin="0,0,0,10"
                    HorizontalAlignment="Center"
                    FontSize="14"
                    Foreground="White"
                    Text="{Binding ProcessingStatus.Value}" />
            </StackPanel>
        </Grid>

        <!--  元の型情報  -->
        <StackPanel
            Grid.Row="0"
            Margin="10"
            Orientation="Vertical">
            <DockPanel>
                <TextBlock
                    DockPanel.Dock="Left"
                    FontWeight="Bold"
                    Text="元の型: " />
                <TextBlock FontFamily="Consolas" Text="{Binding OriginalTypeName.Value}" />
            </DockPanel>
        </StackPanel>

        <!--  表示オプション  -->
        <StackPanel
            Grid.Row="1"
            Margin="10,0"
            Orientation="Horizontal">
            <CheckBox
                Margin="0,0,10,0"
                Content="ベース型/インターフェースを表示"
                IsChecked="{Binding ShowBaseTypes.Value}" />
            <CheckBox Content="派生型を表示" IsChecked="{Binding ShowDerivedTypes.Value}" />
            <CheckBox
                Margin="10,0,0,0"
                Content="関連型を表示"
                IsChecked="{Binding ShowRelatedTypes.Value}"
                Visibility="{Binding IsEnabledRelatedTypes.Value, Converter={StaticResource BooleanToVisibilityConverter}}" />
        </StackPanel>

        <!--  型階層リスト  -->
        <Grid Grid.Row="2" Margin="10">
            <ListBox
                ItemsSource="{Binding TypeCandidates.Value}"
                SelectedItem="{Binding SelectedType.Value}"
                SelectionMode="Single">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>

                            <!--  型の種類を示すアイコン (テキストで代用)  -->
                            <TextBlock
                                Grid.Row="0"
                                Grid.Column="0"
                                Width="15"
                                Margin="0,0,5,0"
                                FontFamily="Consolas"
                                FontStyle="Italic"
                                FontWeight="Bold"
                                Foreground="{Binding IsInterface, Converter={StaticResource InverseBooleanConverter}, ConverterParameter='#4EC9B0', FallbackValue='#B8D7A3'}">
                                <TextBlock.Style>
                                    <Style TargetType="{x:Type TextBlock}">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsInterface}" Value="True">
                                                <Setter Property="Text" Value="I" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding IsInterface}" Value="False">
                                                <Setter Property="Text" Value="C" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>

                            <!--  型名  -->
                            <TextBlock
                                Grid.Row="0"
                                Grid.Column="1"
                                FontWeight="Bold"
                                Foreground="{Binding IsInterface, Converter={StaticResource InverseBooleanConverter}, ConverterParameter='#4EC9B0', FallbackValue='#B8D7A3'}"
                                Text="{Binding DisplayName}" />

                            <!--  名前空間  -->
                            <TextBlock
                                Grid.Row="1"
                                Grid.Column="1"
                                FontSize="11"
                                Foreground="#999999"
                                Text="{Binding RequiredNamespace}" />
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>

        <!--  ボタンエリア  -->
        <DockPanel Grid.Row="3" Margin="10">
            <TextBlock
                VerticalAlignment="Center"
                DockPanel.Dock="Left"
                Text="選択した型で置き換えます。必要に応じてusing文も追加されます。" />
            <StackPanel
                HorizontalAlignment="Right"
                DockPanel.Dock="Right"
                Orientation="Horizontal">
                <!--<Button
                    Margin="5"
                    Command="{Binding PreviewCommand}"
                    Content="変更をプレビュー"
                    IsEnabled="{Binding IsProcessing.Value, Converter={StaticResource InverseBooleanConverter}}" />-->
                <Button
                    Margin="5"
                    Command="{Binding AnalyzeImpactCommand}"
                    Content="影響範囲を分析"
                    IsEnabled="{Binding IsProcessing.Value, Converter={StaticResource InverseBooleanConverter}}" />
                <Button
                    Margin="5"
                    Command="{Binding ApplyCommand}"
                    Content="適用"
                    IsEnabled="{Binding IsProcessing.Value, Converter={StaticResource InverseBooleanConverter}}" />
                <Button
                    Margin="5"
                    Command="{Binding CancelCommand}"
                    Content="キャンセル"
                    IsEnabled="{Binding IsProcessing.Value, Converter={StaticResource InverseBooleanConverter}}" />
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>