<Window
    x:Class="boilersExtensions.Views.ImpactAnalysisDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:boilersExtensions.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="型置換の影響範囲分析"
    Width="800"
    Height="600"
    Background="#1F1F1F"
    ResizeMode="CanResize"
    Topmost="True"
    mc:Ignorable="d">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <converters:InverseBooleanConverter x:Key="InverseBooleanConverter" />
        <converters:InverseBooleanToStringConverter x:Key="InverseBooleanToStringConverter" />
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5" />
            <Setter Property="Padding" Value="8,2" />
            <Setter Property="MinWidth" Value="80" />
            <Setter Property="Height" Value="25" />
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Margin" Value="2" />
        </Style>
        <!--  Expanderのスタイル  -->
        <Style x:Key="IssueExpanderStyle" TargetType="Expander">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Background" Value="#333333" />
            <Setter Property="BorderBrush" Value="#555555" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Margin" Value="0,5,0,0" />
        </Style>
        <!--  その他既存のスタイル  -->
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  ヘッダー：置換情報  -->
        <StackPanel Grid.Row="0" Margin="10">
            <TextBlock
                FontSize="16"
                FontWeight="Bold"
                Text="型置換の影響範囲分析" />
            <StackPanel Margin="0,5,0,0" Orientation="Horizontal">
                <TextBlock FontWeight="Bold" Text="元の型: " />
                <TextBlock Text="{Binding OriginalTypeName}" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock FontWeight="Bold" Text="新しい型: " />
                <TextBlock Foreground="#0078D7" Text="{Binding NewTypeName}" />
            </StackPanel>
            <TextBlock Margin="0,5,0,0">
                <Run Text="合計 " />
                <Run FontWeight="Bold" Text="{Binding ReferencesCount}" />
                <Run Text=" 箇所の参照が影響を受ける可能性があります。" />
            </TextBlock>
        </StackPanel>

        <!--  参照箇所と潜在的な問題をタブで切り替え  -->
        <TabControl Grid.Row="2" Margin="10">
            <TabItem Header="参照箇所">
                <DataGrid
                    AutoGenerateColumns="False"
                    Background="#222222"
                    Foreground="White"
                    GridLinesVisibility="All"
                    HeadersVisibility="All"
                    IsReadOnly="True"
                    ItemsSource="{Binding References}"
                    MouseDoubleClick="DataGrid_MouseDoubleClick">
                    <DataGrid.Resources>
                        <!--  セル全体のスタイル  -->
                        <Style TargetType="DataGridCell">
                            <Setter Property="Foreground" Value="White" />
                            <Setter Property="Background" Value="#333333" />
                            <Setter Property="BorderBrush" Value="#555555" />
                            <Setter Property="BorderThickness" Value="0,0,1,1" />
                            <Setter Property="Padding" Value="5" />
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#0A78D7" />
                                    <Setter Property="Foreground" Value="White" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>

                        <!--  ヘッダーのスタイル  -->
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#444444" />
                            <Setter Property="Foreground" Value="White" />
                            <Setter Property="Padding" Value="5" />
                            <Setter Property="BorderBrush" Value="#555555" />
                            <Setter Property="BorderThickness" Value="0,0,1,1" />
                        </Style>
                    </DataGrid.Resources>
                    <DataGrid.Columns>
                        <DataGridTemplateColumn Width="80" Header="ブックマーク">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <CheckBox
                                        HorizontalAlignment="Center"
                                        Click="BookmarkCheckBox_Click"
                                        IsChecked="{Binding IsBookmarked.Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        Tag="{Binding}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!--  通常の行番号 - Razorファイルでは非表示  -->
                        <DataGridTextColumn
                            Width="50"
                            Binding="{Binding LineNumber}"
                            Header="行">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="White" />
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                            <DataGridTextColumn.Visibility>
                                <Binding Path="DataContext.IsRazorFile.Value" RelativeSource="{RelativeSource AncestorType={x:Type Window}}">
                                    <Binding.Converter>
                                        <BooleanToVisibilityConverter />
                                    </Binding.Converter>
                                    <Binding.ConverterParameter>Inverse</Binding.ConverterParameter>
                                </Binding>
                            </DataGridTextColumn.Visibility>
                        </DataGridTextColumn>

                        <!--  Razor行番号列 - ヘッダーテキストを動的に変更  -->
                        <DataGridTextColumn Width="100" Binding="{Binding RazorLineNumber}">
                            <DataGridTextColumn.Header>
                                <TextBlock>
                                    <TextBlock.Text>
                                        <Binding
                                            Converter="{StaticResource InverseBooleanToStringConverter}"
                                            ConverterParameter="行,行 (Razor)"
                                            FallbackValue="行"
                                            Path="DataContext.IsRazorFile.Value"
                                            RelativeSource="{RelativeSource AncestorType={x:Type Window}}" />
                                    </TextBlock.Text>
                                </TextBlock>
                            </DataGridTextColumn.Header>
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="White" />
                                    <!--  Razorの行が0の場合は表示を調整  -->
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding RazorLineNumber}" Value="0">
                                            <Setter Property="Text" Value="-" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                            <DataGridTextColumn.Visibility>
                                <Binding Path="DataContext.IsRazorFile.Value" RelativeSource="{RelativeSource AncestorType={x:Type Window}}">
                                    <Binding.Converter>
                                        <BooleanToVisibilityConverter />
                                    </Binding.Converter>
                                </Binding>
                            </DataGridTextColumn.Visibility>
                        </DataGridTextColumn>

                        <DataGridTextColumn
                            Width="150"
                            Binding="{Binding ReferenceType}"
                            Header="種類">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="White" />
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn
                            Width="*"
                            Binding="{Binding Text}"
                            Header="コード">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="White" />
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>

            <TabItem Header="潜在的な問題（従来表示）" Visibility="{Binding HasPotentialIssues.Value, Converter={StaticResource BooleanToVisibilityConverter}}">
                <ListView
                    Background="#222222"
                    Foreground="White"
                    ItemsSource="{Binding PotentialIssues}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Expander
                                Foreground="White"
                                Header="{Binding IssueType}"
                                IsExpanded="False">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <TextBlock
                                        Grid.Row="0"
                                        Margin="5"
                                        Text="{Binding Description}"
                                        TextWrapping="Wrap" />
                                    <StackPanel
                                        Grid.Row="1"
                                        Margin="5,2"
                                        Orientation="Horizontal">
                                        <TextBlock FontWeight="Bold" Text="{Binding FileName}" />
                                        <TextBlock Margin="5,0,0,0" Text=" (行: " />

                                        <!--  Conditional display of line numbers  -->
                                        <ContentControl>
                                            <ContentControl.Style>
                                                <Style TargetType="ContentControl">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding DataContext.IsRazorFile.Value, RelativeSource={RelativeSource AncestorType={x:Type Window}}}" Value="True">
                                                            <Setter Property="Content">
                                                                <Setter.Value>
                                                                    <TextBlock Text="{Binding RazorLineNumber}" />
                                                                </Setter.Value>
                                                            </Setter>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding DataContext.IsRazorFile.Value, RelativeSource={RelativeSource AncestorType={x:Type Window}}}" Value="False">
                                                            <Setter Property="Content">
                                                                <Setter.Value>
                                                                    <TextBlock Text="{Binding LineNumber}" />
                                                                </Setter.Value>
                                                            </Setter>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </ContentControl.Style>
                                        </ContentControl>

                                        <TextBlock Text=")" />
                                    </StackPanel>
                                    <Border
                                        Grid.Row="2"
                                        Margin="5,2"
                                        Padding="5"
                                        Background="#333333">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>
                                            <TextBlock
                                                Grid.Row="0"
                                                FontFamily="Consolas"
                                                Text="{Binding CodeSnippet}"
                                                TextWrapping="Wrap" />
                                            <Button
                                                Grid.Row="1"
                                                Margin="0,5,0,0"
                                                Padding="5,2"
                                                HorizontalAlignment="Right"
                                                Background="#444444"
                                                Click="Issue_Navigate"
                                                Content="移動"
                                                Foreground="White"
                                                Tag="{Binding}" />
                                        </Grid>
                                    </Border>
                                    <StackPanel Grid.Row="3" Margin="5,2">
                                        <TextBlock FontWeight="Bold" Text="提案:" />
                                        <TextBlock
                                            Margin="5,0,0,0"
                                            Text="{Binding SuggestedFix}"
                                            TextWrapping="Wrap" />
                                    </StackPanel>
                                </Grid>
                            </Expander>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </TabItem>

            <!--  グループ化された潜在的な問題のタブ  -->
            <TabItem Header="潜在的な問題（整理済み）" Visibility="{Binding HasPotentialIssues.Value, Converter={StaticResource BooleanToVisibilityConverter}}">
                <ScrollViewer Background="#222222">
                    <ItemsControl ItemsSource="{Binding GroupedIssues}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Expander IsExpanded="{Binding IsExpanded.Value, Mode=TwoWay}" Style="{StaticResource IssueExpanderStyle}">
                                    <Expander.Header>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>
                                            <TextBlock
                                                Grid.Column="0"
                                                FontWeight="Bold"
                                                Text="{Binding IssueType}" />
                                            <TextBlock
                                                Grid.Column="1"
                                                Margin="10,0,0,0"
                                                Text="{Binding Description}"
                                                TextTrimming="CharacterEllipsis" />
                                            <TextBlock Grid.Column="2" Margin="5,0,0,0">
                                                <Run Text="(" />
                                                <Run Text="{Binding UniqueIssueCount, Mode=OneWay}" />
                                                <Run Text=" 箇所 [元: " />
                                                <Run Text="{Binding TotalIssueCount, Mode=OneWay}" />
                                                <Run Text="], " />
                                                <Run Text="{Binding AffectedFileCount, Mode=OneWay}" />
                                                <Run Text=" ファイル)" />
                                            </TextBlock>
                                        </Grid>
                                    </Expander.Header>
                                    <Grid Margin="10">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>

                                        <!--  コードサンプル  -->
                                        <Border
                                            Grid.Row="0"
                                            Margin="0,5,0,10"
                                            Padding="10"
                                            Background="#333333"
                                            BorderBrush="#555555"
                                            BorderThickness="1"
                                            CornerRadius="3">
                                            <TextBlock
                                                FontFamily="Consolas"
                                                Foreground="#CCCCCC"
                                                Text="{Binding RepresentativeCodeSnippet}"
                                                TextWrapping="Wrap" />
                                        </Border>

                                        <!--  提案  -->
                                        <StackPanel Grid.Row="1" Margin="0,0,0,10">
                                            <TextBlock FontWeight="Bold" Text="修正の提案:" />
                                            <TextBlock
                                                Margin="10,5,0,0"
                                                Foreground="#CCCCCC"
                                                Text="{Binding SuggestedFix}"
                                                TextWrapping="Wrap" />
                                        </StackPanel>

                                        <!--  影響を受けるファイル一覧  -->
                                        <StackPanel Grid.Row="2" Margin="0,0,0,10">
                                            <TextBlock FontWeight="Bold" Text="影響を受けるファイル:" />
                                            <ItemsControl Margin="10,5,0,0" ItemsSource="{Binding AffectedFiles}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <TextBlock Foreground="#CCCCCC" Text="{Binding}" />
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </StackPanel>

                                        <!--  詳細な問題リスト  -->
                                        <StackPanel Grid.Row="3">
                                            <TextBlock FontWeight="Bold" Text="詳細な問題箇所:" />
                                            <DataGrid
                                                MaxHeight="200"
                                                Margin="0,5,0,0"
                                                AutoGenerateColumns="False"
                                                Background="#333333"
                                                BorderBrush="#555555"
                                                BorderThickness="1"
                                                Foreground="White"
                                                GridLinesVisibility="All"
                                                HeadersVisibility="Column"
                                                IsReadOnly="True"
                                                ItemsSource="{Binding Issues}">
                                                <DataGrid.Resources>
                                                    <!--  セルのスタイル  -->
                                                    <Style TargetType="DataGridCell">
                                                        <Setter Property="Foreground" Value="White" />
                                                        <Setter Property="Background" Value="#444444" />
                                                        <Setter Property="BorderBrush" Value="#555555" />
                                                        <Setter Property="BorderThickness" Value="0,0,1,1" />
                                                        <Setter Property="Padding" Value="5" />
                                                        <Style.Triggers>
                                                            <Trigger Property="IsSelected" Value="True">
                                                                <Setter Property="Background" Value="#0A78D7" />
                                                                <Setter Property="Foreground" Value="White" />
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>

                                                    <!--  ヘッダーのスタイル  -->
                                                    <Style TargetType="DataGridColumnHeader">
                                                        <Setter Property="Background" Value="#333333" />
                                                        <Setter Property="Foreground" Value="White" />
                                                        <Setter Property="Padding" Value="5" />
                                                        <Setter Property="BorderBrush" Value="#555555" />
                                                        <Setter Property="BorderThickness" Value="0,0,1,1" />
                                                    </Style>
                                                </DataGrid.Resources>
                                                <DataGrid.Columns>
                                                    <DataGridTextColumn
                                                        Width="200"
                                                        Binding="{Binding FileName}"
                                                        Header="ファイル">
                                                        <DataGridTextColumn.ElementStyle>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="Foreground" Value="White" />
                                                                <Setter Property="Margin" Value="5" />
                                                            </Style>
                                                        </DataGridTextColumn.ElementStyle>
                                                    </DataGridTextColumn>

                                                    <!--  通常の行番号 - Razorファイルでは非表示  -->
                                                    <DataGridTextColumn
                                                        Width="50"
                                                        Binding="{Binding LineNumber}"
                                                        Header="行">
                                                        <DataGridTextColumn.ElementStyle>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="Foreground" Value="White" />
                                                                <Setter Property="Margin" Value="5" />
                                                                <Setter Property="HorizontalAlignment" Value="Center" />
                                                            </Style>
                                                        </DataGridTextColumn.ElementStyle>
                                                        <DataGridTextColumn.Visibility>
                                                            <Binding Path="DataContext.IsRazorFile.Value" RelativeSource="{RelativeSource AncestorType={x:Type Window}}">
                                                                <Binding.Converter>
                                                                    <BooleanToVisibilityConverter />
                                                                </Binding.Converter>
                                                                <Binding.ConverterParameter>Collapsed</Binding.ConverterParameter>
                                                                <Binding.FallbackValue>Visible</Binding.FallbackValue>
                                                            </Binding>
                                                        </DataGridTextColumn.Visibility>
                                                    </DataGridTextColumn>

                                                    <!--  Razor行番号列 - ヘッダーテキストを動的に変更  -->
                                                    <DataGridTextColumn Width="100" Binding="{Binding RazorLineNumber}">
                                                        <DataGridTextColumn.Header>
                                                            <TextBlock>
                                                                <TextBlock.Text>
                                                                    <Binding
                                                                        Converter="{StaticResource InverseBooleanToStringConverter}"
                                                                        ConverterParameter="行,行 (Razor)"
                                                                        FallbackValue="行"
                                                                        Path="DataContext.IsRazorFile.Value"
                                                                        RelativeSource="{RelativeSource AncestorType={x:Type Window}}" />
                                                                </TextBlock.Text>
                                                            </TextBlock>
                                                        </DataGridTextColumn.Header>
                                                        <DataGridTextColumn.ElementStyle>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="Foreground" Value="White" />
                                                                <Setter Property="Margin" Value="5" />
                                                                <Setter Property="HorizontalAlignment" Value="Center" />
                                                                <!--  Razorの行が0の場合は表示を調整  -->
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding RazorLineNumber}" Value="0">
                                                                        <Setter Property="Text" Value="-" />
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </DataGridTextColumn.ElementStyle>
                                                    </DataGridTextColumn>

                                                    <DataGridTemplateColumn Width="*" Header="コード">
                                                        <DataGridTemplateColumn.CellTemplate>
                                                            <DataTemplate>
                                                                <Button
                                                                    Background="Transparent"
                                                                    BorderBrush="Transparent"
                                                                    Command="{Binding DataContext.NavigateToIssueCommand, RelativeSource={RelativeSource AncestorType={x:Type Window}}}"
                                                                    CommandParameter="{Binding}"
                                                                    Foreground="White">
                                                                    <TextBlock
                                                                        Foreground="White"
                                                                        Text="{Binding CodeSnippet}"
                                                                        TextTrimming="CharacterEllipsis"
                                                                        ToolTip="{Binding CodeSnippet}" />
                                                                </Button>
                                                            </DataTemplate>
                                                        </DataGridTemplateColumn.CellTemplate>
                                                    </DataGridTemplateColumn>
                                                </DataGrid.Columns>
                                            </DataGrid>
                                        </StackPanel>
                                    </Grid>
                                </Expander>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </TabItem>
        </TabControl>

        <!--  ボタンエリア  -->
        <StackPanel
            Grid.Row="3"
            Margin="10"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button Command="{Binding CloseCommand}" Content="閉じる" />
        </StackPanel>
    </Grid>
</Window>