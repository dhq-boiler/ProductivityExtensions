<Window
    x:Class="boilersExtensions.Dialogs.FixedValuesDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="固定値の編集"
    Width="400"
    Height="300"
    Background="#1F1F1F"
    ResizeMode="CanResize"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Window.Resources>
        <!-- ボタンスタイル -->
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5" />
            <Setter Property="Padding" Value="8,2" />
            <Setter Property="MinWidth" Value="80" />
            <Setter Property="Height" Value="25" />
        </Style>

        <!-- テキストブロックスタイル -->
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Margin" Value="2" />
        </Style>

        <!-- テキストボックススタイル -->
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#333333" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderBrush" Value="#555555" />
            <Setter Property="Padding" Value="2" />
            <Setter Property="Margin" Value="2" />
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- ヘッダー説明 -->
        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock FontWeight="Bold" Text="固定値の設定" />
            <TextBlock Text="各行に1つの値を入力してください。生成するレコードは値ごとに作成されます。" />
            <TextBlock Text="プロパティ名: " FontWeight="Bold">
                <Run Text="{Binding PropertyName}" FontWeight="Normal" />
            </TextBlock>
        </StackPanel>

        <!-- 固定値入力エリア（複数行テキストボックス） -->
        <TextBox Grid.Row="1"
                 Text="{Binding FixedValuesText, UpdateSourceTrigger=PropertyChanged}"
                 AcceptsReturn="True"
                 TextWrapping="NoWrap"
                 VerticalScrollBarVisibility="Auto"
                 HorizontalScrollBarVisibility="Auto" />

        <!-- ボタンエリア -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,10,0,0">
            <Button Content="OK"
                    Click="OkButton_Click"
                    IsDefault="True" />
            <Button Content="キャンセル"
                    Click="CancelButton_Click"
                    IsCancel="True" />
        </StackPanel>
    </Grid>
</Window>