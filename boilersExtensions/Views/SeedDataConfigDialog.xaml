<Window
    x:Class="boilersExtensions.Dialogs.SeedDataConfigDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:boilersExtensions.Controls"
    xmlns:converters="clr-namespace:boilersExtensions.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpers="clr-namespace:boilersExtensions.Helpers"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Seed Generator for EFCore"
    Width="700"
    Height="600"
    Background="#1F1F1F"
    Closing="SeedDataConfigDialog_Closing"
    ResizeMode="CanResize"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <converters:InverseBooleanConverter x:Key="InverseBooleanConverter" />
        <converters:EntityPropertyConverter x:Key="EntityPropertyConverter" />
        <converters:PropertyWithNameConverter x:Key="PropertyWithNameConverter" />

        <!--  ボタンスタイル  -->
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5" />
            <Setter Property="Padding" Value="8,2" />
            <Setter Property="MinWidth" Value="80" />
            <Setter Property="Height" Value="25" />
        </Style>

        <!--  ラベルスタイル  -->
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Margin" Value="2" />
        </Style>

        <!--  チェックボックススタイル  -->
        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Margin" Value="5" />
        </Style>

        <!--  テキストボックススタイル  -->
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#333333" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderBrush" Value="#555555" />
            <Setter Property="Padding" Value="2" />
            <Setter Property="Margin" Value="2" />
        </Style>

        <!--  コンボボックススタイル  -->
        <Style TargetType="ComboBox">
            <Setter Property="Foreground" Value="Black" />
            <Setter Property="BorderBrush" Value="#555555" />
            <Setter Property="Padding" Value="2" />
            <Setter Property="Margin" Value="2" />
            <Style.Resources>
                <!--  ドロップダウンアイテムのスタイル  -->
                <Style TargetType="ComboBoxItem">
                    <Setter Property="Foreground" Value="Black" />
                </Style>
            </Style.Resources>
        </Style>

        <!--  データタイプのコンボボックススタイル改善  -->
        <Style x:Key="ImprovedDataTypeComboBox" TargetType="ComboBox">
            <Setter Property="Foreground" Value="Black" />
            <Setter Property="Background" Value="#FFFFFF" />
            <Setter Property="BorderBrush" Value="#AAAAAA" />
            <Setter Property="Height" Value="22" />
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Foreground" Value="#888888" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <!--  データグリッドスタイル  -->
        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="#222222" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderBrush" Value="#333333" />
            <Setter Property="GridLinesVisibility" Value="All" />
            <Setter Property="HeadersVisibility" Value="All" />
            <Setter Property="RowBackground" Value="#333333" />
            <Setter Property="AlternatingRowBackground" Value="#3A3A3A" />
            <Setter Property="CanUserAddRows" Value="True" />
            <Setter Property="CanUserDeleteRows" Value="True" />
            <Setter Property="CanUserReorderColumns" Value="True" />
            <Setter Property="CanUserResizeRows" Value="False" />
            <Setter Property="CanUserSortColumns" Value="True" />
        </Style>

        <!--  データグリッドヘッダースタイル  -->
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#444444" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Padding" Value="5" />
            <Setter Property="BorderBrush" Value="#555555" />
            <Setter Property="BorderThickness" Value="0,0,1,1" />
        </Style>

        <!--  データグリッドセルスタイル  -->
        <Style TargetType="DataGridCell">
            <Setter Property="BorderBrush" Value="#555555" />
            <Setter Property="BorderThickness" Value="0,0,1,1" />
            <Setter Property="Padding" Value="5" />
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#0A78D7" />
                    <Setter Property="Foreground" Value="White" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <!--  グループボックススタイル  -->
        <Style TargetType="GroupBox">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderBrush" Value="#555555" />
            <Setter Property="Margin" Value="5" />
        </Style>

        <!--  DatePickerスタイル  -->
        <Style TargetType="DatePicker">
            <Setter Property="Background" Value="#333333" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderBrush" Value="#555555" />
            <Style.Resources>
                <Style TargetType="DatePickerTextBox">
                    <Setter Property="Background" Value="#333333" />
                    <Setter Property="Foreground" Value="White" />
                    <Setter Property="BorderBrush" Value="Transparent" />
                </Style>
            </Style.Resources>
        </Style>
    </Window.Resources>

    <!--  メインコンテンツ  -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  ローディング表示  -->
        <Grid
            Grid.RowSpan="3"
            Panel.ZIndex="1000"
            Background="#80000000"
            Visibility="{Binding IsProcessing.Value, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel
                MinWidth="300"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
                <controls:LoadingSpinner
                    Width="50"
                    Height="20"
                    Margin="0,0,0,10" />
                <TextBlock
                    Margin="0,0,0,10"
                    HorizontalAlignment="Center"
                    FontSize="14"
                    Foreground="White"
                    Text="{Binding ProcessingStatus.Value}" />
                <ProgressBar
                    Width="250"
                    Height="20"
                    Margin="0,0,0,5"
                    Maximum="100"
                    Minimum="0"
                    Value="{Binding Progress.Value}" />
                <TextBlock
                    HorizontalAlignment="Center"
                    FontSize="12"
                    Foreground="White"
                    Text="{Binding Progress.Value, StringFormat={}{0:0}%}" />
            </StackPanel>
        </Grid>

        <!--  ヘッダー部分  -->
        <Grid Grid.Row="0" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <TextBlock
                    FontSize="16"
                    FontWeight="Bold"
                    Text="Seed Generator for EFCore" />
                <TextBlock Margin="0,5,0,0" Text="{Binding TargetFileName.Value}" />
                <TextBlock Text="{Binding TargetType.Value}" />
            </StackPanel>

            <StackPanel
                Grid.Column="1"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <TextBlock Text="{Binding Source={x:Static helpers:ResourceService.Current}, Path=Resource.SeedGenerator_NumberOfReferenceData, Mode=OneWay}" />
                <TextBox
                    Width="60"
                    Margin="5,0"
                    VerticalContentAlignment="Center"
                    Text="{Binding DataCount.Value, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>
        </Grid>

        <!--  コンテンツ部分 - TabControlを使用して複数の設定画面を切り替え  -->
        <TabControl
            Grid.Row="1"
            Margin="10"
            Background="#222222">
            <!--  タブ1: スキーマ設定  -->
            <TabItem Header="{Binding Source={x:Static helpers:ResourceService.Current}, Path=Resource.SeedGenerator_SchemaSetting, Mode=OneWay}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!--  スキーマ操作ボタン群  -->
                    <StackPanel
                        Grid.Row="0"
                        Margin="0,5"
                        Orientation="Horizontal">
                        <Button Command="{Binding AddPropertyCommand}" Content="{Binding Source={x:Static helpers:ResourceService.Current}, Path=Resource.Add, Mode=OneWay}" />
                        <Button Command="{Binding RemovePropertyCommand}" Content="{Binding Source={x:Static helpers:ResourceService.Current}, Path=Resource.Delete, Mode=OneWay}" />
                        <Button Command="{Binding MoveUpPropertyCommand}" Content="{Binding Source={x:Static helpers:ResourceService.Current}, Path=Resource.Up, Mode=OneWay}" />
                        <Button Command="{Binding MoveDownPropertyCommand}" Content="{Binding Source={x:Static helpers:ResourceService.Current}, Path=Resource.Down, Mode=OneWay}" />
                        <Button Command="{Binding LoadSchemaCommand}" Content="{Binding Source={x:Static helpers:ResourceService.Current}, Path=Resource.SeedGenerator_LoadSchema, Mode=OneWay}" />
                    </StackPanel>

                    <!--  プロパティ一覧  -->
                    <DataGrid
                        Grid.Row="1"
                        Margin="0,5"
                        AutoGenerateColumns="False"
                        ItemsSource="{Binding Properties}"
                        SelectedItem="{Binding SelectedProperty.Value}">
                        <DataGrid.Columns>
                            <DataGridTextColumn
                                Width="*"
                                Binding="{Binding Name.Value}"
                                Header="{Binding Source={x:Static helpers:ResourceService.Current}, Path=Resource.SeedGenerator_PropertyName, Mode=OneWay}">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="White" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn
                                Width="120"
                                Binding="{Binding Type.Value}"
                                Header="{Binding Source={x:Static helpers:ResourceService.Current}, Path=Resource.Type, Mode=OneWay}">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="White" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridComboBoxColumn
                                Width="150"
                                Header="{Binding Source={x:Static helpers:ResourceService.Current}, Path=Resource.DataType, Mode=OneWay}"
                                SelectedItemBinding="{Binding DataType.Value}">
                                <DataGridComboBoxColumn.ElementStyle>
                                    <Style TargetType="ComboBox">
                                        <Setter Property="Background" Value="#333333" />
                                        <Setter Property="Foreground" Value="White" />
                                        <Setter Property="ItemsSource" Value="{Binding DataContext.DataTypes, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}" />
                                        <Style.Resources>
                                            <Style TargetType="ComboBoxItem">
                                                <Setter Property="Background" Value="#333333" />
                                                <Setter Property="Foreground" Value="White" />
                                            </Style>
                                        </Style.Resources>
                                    </Style>
                                </DataGridComboBoxColumn.ElementStyle>
                                <DataGridComboBoxColumn.EditingElementStyle>
                                    <Style TargetType="ComboBox">
                                        <Setter Property="Foreground" Value="Black" />
                                        <Setter Property="ItemsSource" Value="{Binding DataContext.DataTypes, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}" />
                                        <Style.Resources>
                                            <Style TargetType="ComboBoxItem">
                                                <Setter Property="Foreground" Value="Black" />
                                            </Style>
                                        </Style.Resources>
                                    </Style>
                                </DataGridComboBoxColumn.EditingElementStyle>
                            </DataGridComboBoxColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!--  エンティティとリレーションシップタブ  -->
            <TabItem Header="{Binding Source={x:Static helpers:ResourceService.Current}, Path=Resource.SeedGenerator_EntityRelated, Mode=OneWay}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="250" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!--  エンティティリスト  -->
                    <DockPanel Grid.Column="0">
                        <StackPanel Margin="0,5" DockPanel.Dock="Top">
                            <Button Command="{Binding LoadAdditionalEntityCommand}" Content="{Binding Source={x:Static helpers:ResourceService.Current}, Path=Resource.SeedGenerator_AddEntity, Mode=OneWay}" />
                            <Button
                                Margin="0,5,0,0"
                                Command="{Binding DetectRelationshipsCommand}"
                                Content="{Binding Source={x:Static helpers:ResourceService.Current}, Path=Resource.SeedGenerator_DetectRelationship, Mode=OneWay}" />
                        </StackPanel>

                        <ListBox ItemsSource="{Binding Entities}" SelectedItem="{Binding SelectedEntity.Value}">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <CheckBox VerticalAlignment="Center" IsChecked="{Binding IsSelected.Value}" />
                                        <TextBlock Margin="5,0" Text="{Binding Name.Value}" />
                                        <TextBlock FontSize="11" Foreground="Gray">
                                            <Run Text="(" />
                                            <Run Text="{Binding TotalRecordCount.Value}" />
                                            <Run Text="{Binding Source={x:Static helpers:ResourceService.Current}, Path=Resource.CountKen, Mode=OneWay}" />
                                            <Run Text=")" />
                                        </TextBlock>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </DockPanel>

                    <!--  選択されたエンティティの詳細  -->
                    <Grid Grid.Column="1" Margin="10,0,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <!--  エンティティ情報  -->
                        <StackPanel Grid.Row="0">
                            <TextBlock FontWeight="Bold">
                                <Run Text="{Binding Source={x:Static helpers:ResourceService.Current}, Path=Resource.Entity, Mode=OneWay}" />
                                <Run Text=": " />
                                <Run Text="{Binding SelectedEntity.Value.Name.Value}" />
                            </TextBlock>
                            <Grid Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <!--  親エンティティがない場合の設定  -->
                                <TextBlock Grid.Column="0" Visibility="{Binding SelectedEntity.Value.ParentEntity.Value, Converter={StaticResource InverseBooleanConverter}, ConverterParameter=TrueForNonNull}">
                                    <Run Text="{Binding Source={x:Static helpers:ResourceService.Current}, Path=Resource.SeedGenerator_NumberOfRecords, Mode=OneWay}" />
                                    <Run Text=":" />
                                </TextBlock>
                                <TextBox
                                    Grid.Column="1"
                                    Width="60"
                                    Margin="5,0"
                                    Text="{Binding SelectedEntity.Value.RecordCount.Value, UpdateSourceTrigger=PropertyChanged}"
                                    Visibility="{Binding SelectedEntity.Value.ParentEntity.Value, Converter={StaticResource InverseBooleanConverter}, ConverterParameter=TrueForNonNull}" />

                                <!--  親エンティティがある場合の設定  -->
                                <TextBlock Grid.Column="2" Visibility="{Binding SelectedEntity.Value.ParentEntity.Value, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=TrueForNonNull}">
                                    <Run Text="{Binding Source={x:Static helpers:ResourceService.Current}, Path=Resource.SeedGenerator_ParentOfEntity, Mode=OneWay}" />
                                    <Run Text=":" />
                                </TextBlock>
                                <TextBlock
                                    Grid.Column="3"
                                    Margin="5,0"
                                    Text="{Binding SelectedEntity.Value.ParentEntity.Value.Name.Value}"
                                    Visibility="{Binding SelectedEntity.Value.ParentEntity.Value, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=TrueForNonNull}" />

                                <TextBlock
                                    Grid.Column="4"
                                    Margin="10,0,0,0"
                                    Visibility="{Binding SelectedEntity.Value.ParentEntity.Value, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=TrueForNonNull}">
                                    <Run Text="{Binding Source={x:Static helpers:ResourceService.Current}, Path=Resource.SeedGenerator_NumberOfRecordsPerParent, Mode=OneWay}" />
                                    <Run Text=":" />
                                </TextBlock>
                                <TextBox
                                    Grid.Column="5"
                                    Width="60"
                                    Margin="5,0"
                                    Text="{Binding SelectedEntity.Value.RecordsPerParent.Value, UpdateSourceTrigger=PropertyChanged}"
                                    Visibility="{Binding SelectedEntity.Value.ParentEntity.Value, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=TrueForNonNull}" />

                                <!--  共通  -->
                                <TextBlock
                                    Grid.Column="6"
                                    Margin="10,0,0,0"
                                    HorizontalAlignment="Right">
                                    <Run Text="{Binding Source={x:Static helpers:ResourceService.Current}, Path=Resource.Total, Mode=OneWay}" />
                                    <Run Text=": " />
                                    <Run Text="{Binding SelectedEntity.Value.TotalRecordCount.Value}" />
                                    <Run Text="{Binding Source={x:Static helpers:ResourceService.Current}, Path=Resource.CountKen, Mode=OneWay}" />
                                </TextBlock>
                            </Grid>
                        </StackPanel>

                        <!--  エンティティの親子関係表示  -->
                        <GroupBox
                            Grid.Row="1"
                            Margin="0,5"
                            Header="{Binding Source={x:Static helpers:ResourceService.Current}, Path=Resource.SeedGenerator_EntityRelationDiagram, Mode=OneWay}">
                            <ListBox
                                Background="Transparent"
                                BorderThickness="0"
                                Foreground="White"
                                ItemsSource="{Binding EntityRelationships}">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="2">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" Text="{Binding ThisEntityName}" />

                                            <!--  親子関係がある場合のみ表示  -->
                                            <TextBlock
                                                Grid.Column="1"
                                                Text=" → "
                                                Visibility="{Binding ThisEntityName, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=TrueForNonEmpty}" />
                                            <TextBlock
                                                Grid.Column="2"
                                                Text="{Binding ThisEntityName}"
                                                Visibility="{Binding ThisEntityName, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=TrueForNonEmpty}" />

                                            <TextBlock
                                                Grid.Column="3"
                                                Margin="20,0,0,0"
                                                HorizontalAlignment="Right">
                                                <Run Text="{Binding TotalRecords}" />
                                                <Run Text="{Binding Source={x:Static helpers:ResourceService.Current}, Path=Resource.CountKen, Mode=OneWay}" />
                                            </TextBlock>
                                        </Grid>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </GroupBox>

                        <!--  プロパティリスト  -->
                        <GroupBox Grid.Row="2" Header="{Binding Source={x:Static helpers:ResourceService.Current}, Path=Resource.Property, Mode=OneWay}">
                            <DataGrid
                                Name="propertiesDataGrid"
                                Margin="0,5"
                                AutoGenerateColumns="False"
                                ItemsSource="{Binding SelectedEntity.Value.Properties}"
                                SelectedItem="{Binding SelectedProperty.Value}">
                                <DataGrid.Columns>
                                    <DataGridTextColumn
                                        Width="*"
                                        Binding="{Binding Name.Value}"
                                        Header="{Binding Source={x:Static helpers:ResourceService.Current}, Path=Resource.SeedGenerator_PropertyName, Mode=OneWay}">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="White" />
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn
                                        Width="100"
                                        Binding="{Binding Type.Value}"
                                        Header="{Binding Source={x:Static helpers:ResourceService.Current}, Path=Resource.Type, Mode=OneWay}">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="White" />
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridComboBoxColumn
                                        Width="120"
                                        Header="{Binding Source={x:Static helpers:ResourceService.Current}, Path=Resource.DataType, Mode=OneWay}"
                                        SelectedItemBinding="{Binding DataType.Value}">
                                        <DataGridComboBoxColumn.ElementStyle>
                                            <Style TargetType="ComboBox">
                                                <Setter Property="Background" Value="#333333" />
                                                <Setter Property="Foreground" Value="White" />
                                                <Setter Property="ItemsSource" Value="{Binding DataContext.DataTypes, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}" />
                                                <Style.Resources>
                                                    <Style TargetType="ComboBoxItem">
                                                        <Setter Property="Background" Value="#333333" />
                                                        <Setter Property="Foreground" Value="White" />
                                                    </Style>
                                                </Style.Resources>
                                            </Style>
                                        </DataGridComboBoxColumn.ElementStyle>
                                        <DataGridComboBoxColumn.EditingElementStyle>
                                            <Style TargetType="ComboBox">
                                                <Setter Property="Foreground" Value="Black" />
                                                <Setter Property="ItemsSource" Value="{Binding DataContext.DataTypes, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}" />
                                                <Style.Resources>
                                                    <Style TargetType="ComboBoxItem">
                                                        <Setter Property="Foreground" Value="Black" />
                                                    </Style>
                                                </Style.Resources>
                                            </Style>
                                        </DataGridComboBoxColumn.EditingElementStyle>
                                    </DataGridComboBoxColumn>
                                    <!--  追加：固定値列  -->
                                    <DataGridTemplateColumn Width="120" Header="{Binding Source={x:Static helpers:ResourceService.Current}, Path=Resource.SeedGenerator_FixedValue, Mode=OneWay}">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Grid>
                                                    <!--
                                                        データグリッドの行のPropertyViewModelから名前を取得し、
                                                        親のEntityViewModelから該当するPropertyConfigViewModelを取得して表示する
                                                    -->
                                                    <TextBlock>
                                                        <TextBlock.Text>
                                                            <MultiBinding Converter="{StaticResource PropertyWithNameConverter}">
                                                                <Binding Path="DataContext.SelectedEntity.Value" RelativeSource="{RelativeSource AncestorType={x:Type Window}}" />
                                                                <Binding Path="Name.Value" />
                                                            </MultiBinding>
                                                        </TextBlock.Text>
                                                    </TextBlock>
                                                    <Button
                                                        Width="20"
                                                        Height="20"
                                                        Margin="2"
                                                        HorizontalAlignment="Right"
                                                        Click="EditFixedValuesButton_Click"
                                                        Content="..."
                                                        ToolTip="{Binding Source={x:Static helpers:ResourceService.Current}, Path=Resource.SeedGenerator_EditFixedValue, Mode=OneWay}" />
                                                </Grid>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </GroupBox>

                        <!--  リレーションシップヘッダー  -->
                        <StackPanel
                            Grid.Row="3"
                            Margin="0,10,0,5"
                            Orientation="Horizontal">
                            <TextBlock FontWeight="Bold" Text="{Binding Source={x:Static helpers:ResourceService.Current}, Path=Resource.Relationship, Mode=OneWay}" />
                            <Button
                                Margin="10,0"
                                Command="{Binding AddRelationshipCommand}"
                                Content="{Binding Source={x:Static helpers:ResourceService.Current}, Path=Resource.Add, Mode=OneWay}" />
                            <Button Command="{Binding RemoveRelationshipCommand}" Content="{Binding Source={x:Static helpers:ResourceService.Current}, Path=Resource.Delete, Mode=OneWay}" />
                        </StackPanel>

                        <!--  リレーションシップリスト  -->
                        <DataGrid
                            Name="relationshipsDataGrid"
                            Grid.Row="4"
                            AutoGenerateColumns="False"
                            ItemsSource="{Binding SelectedEntity.Value.Relationships}"
                            SelectedItem="{Binding SelectedRelationship.Value}">
                            <DataGrid.Columns>
                                <!--  ソースエンティティ（コンボボックスに変更）  -->
                                <DataGridTemplateColumn Width="120" Header="{Binding Source={x:Static helpers:ResourceService.Current}, Path=Resource.SeedGenerator_SourceEntity, Mode=OneWay}">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Padding="5,2" Text="{Binding SourceEntityName.Value}" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                    <DataGridTemplateColumn.CellEditingTemplate>
                                        <DataTemplate>
                                            <ComboBox
                                                ItemsSource="{Binding DataContext.EntityNames, RelativeSource={RelativeSource AncestorType={x:Type Window}}}"
                                                SelectedItem="{Binding SourceEntityName.Value, UpdateSourceTrigger=PropertyChanged}"
                                                Style="{StaticResource ImprovedDataTypeComboBox}" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellEditingTemplate>
                                </DataGridTemplateColumn>

                                <!--  ソースプロパティ（コンボボックスに変更）  -->
                                <DataGridTemplateColumn Width="120" Header="{Binding Source={x:Static helpers:ResourceService.Current}, Path=Resource.SeedGenerator_SourceProperty, Mode=OneWay}">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Padding="5,2" Text="{Binding SourceProperty.Value}" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                    <DataGridTemplateColumn.CellEditingTemplate>
                                        <DataTemplate>
                                            <!--  ItemsSourceのためのトリック：親のDataContextと現在のアイテムを組み合わせる  -->
                                            <ComboBox Style="{StaticResource ImprovedDataTypeComboBox}">
                                                <ComboBox.ItemsSource>
                                                    <MultiBinding Converter="{StaticResource EntityPropertyConverter}">
                                                        <Binding Path="DataContext" RelativeSource="{RelativeSource AncestorType={x:Type Window}}" />
                                                        <Binding Path="SourceEntityName.Value" />
                                                    </MultiBinding>
                                                </ComboBox.ItemsSource>
                                                <ComboBox.SelectedItem>
                                                    <Binding Path="SourceProperty.Value" UpdateSourceTrigger="PropertyChanged" />
                                                </ComboBox.SelectedItem>
                                            </ComboBox>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellEditingTemplate>
                                </DataGridTemplateColumn>

                                <!--  関連タイプ  -->
                                <DataGridTemplateColumn Width="120" Header="{Binding Source={x:Static helpers:ResourceService.Current}, Path=Resource.SeedGenerator_RelationType, Mode=OneWay}">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Padding="5,2" Text="{Binding RelationType.Value}" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                    <DataGridTemplateColumn.CellEditingTemplate>
                                        <DataTemplate>
                                            <ComboBox
                                                ItemsSource="{Binding DataContext.RelationshipTypes, RelativeSource={RelativeSource AncestorType={x:Type Window}}}"
                                                SelectedItem="{Binding RelationType.Value, UpdateSourceTrigger=PropertyChanged}"
                                                Style="{StaticResource ImprovedDataTypeComboBox}" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellEditingTemplate>
                                </DataGridTemplateColumn>

                                <!--  ターゲットエンティティ（コンボボックスに変更）  -->
                                <DataGridTemplateColumn Width="120" Header="{Binding Source={x:Static helpers:ResourceService.Current}, Path=Resource.SeedGenerator_TargetEntity, Mode=OneWay}">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Padding="5,2" Text="{Binding TargetEntityName.Value}" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                    <DataGridTemplateColumn.CellEditingTemplate>
                                        <DataTemplate>
                                            <ComboBox
                                                ItemsSource="{Binding DataContext.EntityNames, RelativeSource={RelativeSource AncestorType={x:Type Window}}}"
                                                SelectedItem="{Binding TargetEntityName.Value, UpdateSourceTrigger=PropertyChanged}"
                                                Style="{StaticResource ImprovedDataTypeComboBox}" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellEditingTemplate>
                                </DataGridTemplateColumn>

                                <!--  ターゲットプロパティ（コンボボックスに変更）  -->
                                <DataGridTemplateColumn Width="120" Header="{Binding Source={x:Static helpers:ResourceService.Current}, Path=Resource.SeedGenerator_SourceProperty, Mode=OneWay}">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Padding="5,2" Text="{Binding TargetProperty.Value}" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                    <DataGridTemplateColumn.CellEditingTemplate>
                                        <DataTemplate>
                                            <!--  ItemsSourceのためのトリック：親のDataContextと現在のアイテムを組み合わせる  -->
                                            <ComboBox Style="{StaticResource ImprovedDataTypeComboBox}">
                                                <ComboBox.ItemsSource>
                                                    <MultiBinding Converter="{StaticResource EntityPropertyConverter}">
                                                        <Binding Path="DataContext" RelativeSource="{RelativeSource AncestorType={x:Type Window}}" />
                                                        <Binding Path="TargetEntityName.Value" />
                                                    </MultiBinding>
                                                </ComboBox.ItemsSource>
                                                <ComboBox.SelectedItem>
                                                    <Binding Path="TargetProperty.Value" UpdateSourceTrigger="PropertyChanged" />
                                                </ComboBox.SelectedItem>
                                            </ComboBox>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellEditingTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>

                        </DataGrid>
                    </Grid>
                </Grid>
            </TabItem>

            <!--  タブ3: データ形式設定  -->
            <TabItem Header="{Binding Source={x:Static helpers:ResourceService.Current}, Path=Resource.SeedGenerator_DataFormat, Mode=OneWay}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!--  データ形式設定  -->
                    <StackPanel Grid.Row="0" Margin="0,5,0,10">
                        <TextBlock FontWeight="Bold" Text="{Binding Source={x:Static helpers:ResourceService.Current}, Path=Resource.SeedGenerator_DataFormat, Mode=OneWay}" />
                        <ComboBox
                            Margin="5"
                            ItemsSource="{Binding DataFormats}"
                            SelectedItem="{Binding SelectedDataFormat.Value}" />

                        <!--  C#形式の追加設定  -->
                        <StackPanel Visibility="{Binding IsCSharpFormat.Value, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <TextBlock Text="{Binding Source={x:Static helpers:ResourceService.Current}, Path=Resource.SeedGenerator_ClassName, Mode=OneWay}" />
                            <TextBox Text="{Binding ClassName.Value, UpdateSourceTrigger=PropertyChanged}" />
                            <CheckBox Content="{Binding Source={x:Static helpers:ResourceService.Current}, Path=Resource.SeedGenerator_UsePropertyInitializerSyntax, Mode=OneWay}" IsChecked="{Binding UsePropertyInitializer.Value}" />
                            <CheckBox Content="{Binding Source={x:Static helpers:ResourceService.Current}, Path=Resource.SeedGenerator_CreateAsStaticMethod, Mode=OneWay}" IsChecked="{Binding IsStaticMethod.Value}" />
                        </StackPanel>

                        <!--  SQL形式の追加設定  -->
                        <StackPanel Visibility="{Binding IsSqlFormat.Value, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <TextBlock Text="{Binding Source={x:Static helpers:ResourceService.Current}, Path=Resource.SeedGenerator_TableName, Mode=OneWay}" />
                            <TextBox Text="{Binding TableName.Value, UpdateSourceTrigger=PropertyChanged}" />
                            <CheckBox Content="{Binding Source={x:Static helpers:ResourceService.Current}, Path=Resource.SeedGenerator_IncludeTransactionProcessing, Mode=OneWay}" IsChecked="{Binding IncludeTransaction.Value}" />
                        </StackPanel>

                        <!--  XML形式の追加設定  -->
                        <StackPanel Visibility="{Binding IsXmlFormat.Value, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <TextBlock Text="{Binding Source={x:Static helpers:ResourceService.Current}, Path=Resource.SeedGenerator_RootElementName, Mode=OneWay}" />
                            <TextBox Text="{Binding RootElementName.Value, UpdateSourceTrigger=PropertyChanged}" />
                            <TextBlock Text="{Binding Source={x:Static helpers:ResourceService.Current}, Path=Resource.SeedGenerator_ItemElementName, Mode=OneWay}" />
                            <TextBox Text="{Binding ItemElementName.Value, UpdateSourceTrigger=PropertyChanged}" />
                        </StackPanel>
                    </StackPanel>

                    <!--  プレビュー  -->
                    <GroupBox Grid.Row="1" Header="{Binding Source={x:Static helpers:ResourceService.Current}, Path=Resource.Preview, Mode=OneWay}">
                        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                            <TextBox
                                Background="#222222"
                                BorderThickness="0"
                                FontFamily="Consolas"
                                FontSize="12"
                                IsReadOnly="True"
                                Text="{Binding PreviewText.Value}"
                                TextWrapping="NoWrap" />
                        </ScrollViewer>
                    </GroupBox>
                </Grid>
            </TabItem>

            <!--  タブ4: 詳細設定  -->
            <TabItem Header="{Binding Source={x:Static helpers:ResourceService.Current}, Path=Resource.SeedGenerator_AdvancedSettings, Mode=OneWay}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!--  各種オプション設定  -->
                    <StackPanel Grid.Row="0" Margin="0,5,0,10">
                        <TextBlock FontWeight="Bold" Text="{Binding Source={x:Static helpers:ResourceService.Current}, Path=Resource.SeedGenerator_DataGenerationOptions, Mode=OneWay}" />
                        <CheckBox Content="{Binding Source={x:Static helpers:ResourceService.Current}, Path=Resource.SeedGenerator_UseRandomValue, Mode=OneWay}" IsChecked="{Binding UseRandomValues.Value}" />
                        <CheckBox Content="{Binding Source={x:Static helpers:ResourceService.Current}, Path=Resource.SeedGenerator_AutomaticIDNumbering, Mode=OneWay}" IsChecked="{Binding AutoGenerateIds.Value}" />
                        <CheckBox Content="{Binding Source={x:Static helpers:ResourceService.Current}, Path=Resource.SeedGenerator_IncludeNullValues, Mode=OneWay}" IsChecked="{Binding IncludeNullValues.Value}" />
                        <CheckBox Content="{Binding Source={x:Static helpers:ResourceService.Current}, Path=Resource.SeedGenerator_AutomaticRelationshipDetection, Mode=OneWay}" IsChecked="{Binding AutoDetectRelationships.Value}" />

                        <TextBlock
                            Margin="0,10,0,0"
                            FontWeight="Bold"
                            Text="{Binding Source={x:Static helpers:ResourceService.Current}, Path=Resource.SeedGenerator_DateRange, Mode=OneWay}" />
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Width="50">
                                <Run Text="{Binding Source={x:Static helpers:ResourceService.Current}, Path=Resource.StartDate, Mode=OneWay}" />
                                <Run Text=":" />
                            </TextBlock>
                            <DatePicker Margin="5,0" SelectedDate="{Binding StartDate.Value}" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Width="50">
                                <Run Text="{Binding Source={x:Static helpers:ResourceService.Current}, Path=Resource.EndDate, Mode=OneWay}" />
                                <Run Text=":" />
                            </TextBlock>
                            <DatePicker Margin="5,0" SelectedDate="{Binding EndDate.Value}" />
                        </StackPanel>

                        <TextBlock Margin="0,10,0,0" FontWeight="Bold">
                            <Run Text="{Binding Source={x:Static helpers:ResourceService.Current}, Path=Resource.NumericRange, Mode=OneWay}" />
                            <Run Text=":" />
                        </TextBlock>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Width="50">
                                <Run Text="{Binding Source={x:Static helpers:ResourceService.Current}, Path=Resource.MinumumValue, Mode=OneWay}" />
                                <Run Text=":" />
                            </TextBlock>
                            <TextBox Width="80" Text="{Binding MinNumericValue.Value, UpdateSourceTrigger=PropertyChanged}" />
                            <TextBlock Width="50" Margin="10,0,0,0">
                                <Run Text="{Binding Source={x:Static helpers:ResourceService.Current}, Path=Resource.MaximumValue, Mode=OneWay}" />
                                <Run Text=":" />
                            </TextBlock>
                            <TextBox Width="80" Text="{Binding MaxNumericValue.Value, UpdateSourceTrigger=PropertyChanged}" />
                        </StackPanel>
                    </StackPanel>

                    <!--  サポート情報  -->
                    <GroupBox Grid.Row="1" Header="{Binding Source={x:Static helpers:ResourceService.Current}, Path=Resource.SeedGenerator_SupportInformation, Mode=OneWay}">
                        <ScrollViewer>
                            <TextBlock
                                Margin="5"
                                FontSize="12"
                                Foreground="#CCCCCC"
                                TextWrapping="Wrap">
                                <Run Text="{Binding Source={x:Static helpers:ResourceService.Current}, Path=Resource.SeedGenerator_SupportInformationText1, Mode=OneWay}" />
                                <LineBreak />
                                <LineBreak />
                                <Run Text="{Binding Source={x:Static helpers:ResourceService.Current}, Path=Resource.SeedGenerator_SupportInformationText2, Mode=OneWay}" />
                                <LineBreak />
                                <Run Text="{Binding Source={x:Static helpers:ResourceService.Current}, Path=Resource.SeedGenerator_SupportInformationText3, Mode=OneWay}" />
                                <LineBreak />
                                <Run Text="{Binding Source={x:Static helpers:ResourceService.Current}, Path=Resource.SeedGenerator_SupportInformationText4, Mode=OneWay}" />
                                <LineBreak />
                                <Run Text="{Binding Source={x:Static helpers:ResourceService.Current}, Path=Resource.SeedGenerator_SupportInformationText5, Mode=OneWay}" />
                                <LineBreak />
                                <Run Text="{Binding Source={x:Static helpers:ResourceService.Current}, Path=Resource.SeedGenerator_SupportInformationText6, Mode=OneWay}" />
                                <LineBreak />
                                <Run Text="{Binding Source={x:Static helpers:ResourceService.Current}, Path=Resource.SeedGenerator_SupportInformationText7, Mode=OneWay}" />
                                <LineBreak />
                                <LineBreak />
                                <Run Text="{Binding Source={x:Static helpers:ResourceService.Current}, Path=Resource.SeedGenerator_SupportInformationText8, Mode=OneWay}" />
                                <LineBreak />
                                <Run Text="{Binding Source={x:Static helpers:ResourceService.Current}, Path=Resource.SeedGenerator_SupportInformationText9, Mode=OneWay}" />
                                <LineBreak />
                                <Run Text="{Binding Source={x:Static helpers:ResourceService.Current}, Path=Resource.SeedGenerator_SupportInformationText10, Mode=OneWay}" />
                                <LineBreak />
                                <Run Text="{Binding Source={x:Static helpers:ResourceService.Current}, Path=Resource.SeedGenerator_SupportInformationText11, Mode=OneWay}" />
                                <LineBreak />
                                <Run Text="{Binding Source={x:Static helpers:ResourceService.Current}, Path=Resource.SeedGenerator_SupportInformationText12, Mode=OneWay}" />
                                <LineBreak />
                                <Run Text="{Binding Source={x:Static helpers:ResourceService.Current}, Path=Resource.SeedGenerator_SupportInformationText13, Mode=OneWay}" />
                                <LineBreak />
                                <LineBreak />
                                <Run Text="{Binding Source={x:Static helpers:ResourceService.Current}, Path=Resource.SeedGenerator_SupportInformationText14, Mode=OneWay}" />
                                <LineBreak />
                                <Run Text="{Binding Source={x:Static helpers:ResourceService.Current}, Path=Resource.SeedGenerator_SupportInformationText15, Mode=OneWay}" />
                                <LineBreak />
                                <Run Text="{Binding Source={x:Static helpers:ResourceService.Current}, Path=Resource.SeedGenerator_SupportInformationText16, Mode=OneWay}" />
                                <LineBreak />
                                <Run Text="{Binding Source={x:Static helpers:ResourceService.Current}, Path=Resource.SeedGenerator_SupportInformationText17, Mode=OneWay}" />
                            </TextBlock>
                        </ScrollViewer>
                    </GroupBox>
                </Grid>
            </TabItem>
        </TabControl>

        <!--  フッター部分 - ボタン類  -->
        <StackPanel
            Grid.Row="2"
            Margin="10"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button
                Command="{Binding GenerateSeedDataCommand}"
                Content="{Binding Source={x:Static helpers:ResourceService.Current}, Path=Resource.Generate, Mode=OneWay}"
                IsEnabled="{Binding IsProcessing.Value, Converter={StaticResource InverseBooleanConverter}}" />
            <Button
                Command="{Binding CancelCommand}"
                Content="{Binding Source={x:Static helpers:ResourceService.Current}, Path=Resource.Cancel, Mode=OneWay}"
                IsEnabled="{Binding IsProcessing.Value, Converter={StaticResource InverseBooleanConverter}}" />
        </StackPanel>
    </Grid>
</Window>